<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dlugospis.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
        <Button Text="Długi" Command="{Binding ShowDebtsCommand}"/>
        <Button Text="Dodaj dług" Command="{Binding AddDebtCommand}"/>
        <Button Text="Znajomi" Command="{Binding ShowFriendsCommand}"/>
    </StackLayout>

</ContentPage>